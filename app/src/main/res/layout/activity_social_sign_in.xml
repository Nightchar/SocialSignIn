<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.droid.socialsignin.Activity.SocialSignInActivity">

    <Button
        android:id="@+id/btn_google_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google Sign In"/>

    <Button
        android:id="@+id/btn_googl_plus_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google+ Sign In"/>

    <Button
        android:id="@+id/btn_facebook_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook Sign In"/>

    <Button
        android:id="@+id/btn_twitter_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twitter Sign In"/>


</LinearLayout>
